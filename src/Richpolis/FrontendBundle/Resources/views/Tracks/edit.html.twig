{% extends "BackendBundle::backend.html.twig" %}

{% block menu_horizontal %}
    {% include 'BackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'discos'} %}
{% endblock %}

{% block siderbar %}  
    {% include 'BackendBundle:Default:siderbar.html.twig' with {'pagina': 'tracks'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ tinymce_init() }}
    {{ form_javascript(edit_form) }}
{% endblock %}

{% block body -%}
    <h1>Editar track "{{entity.track}}"</h1>

    <form id="formPrincipal" action="{{ path('tracks_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
    </form>
    <p style="margin-top: 10px;">
    <ul class="record_actions nav nav-pills">
        <li>
            <button class="btn btn-primary" onclick="$('#formPrincipal').submit();">Actualizar</button>
        </li>
        <li>&nbsp;</li>
        <li>
            <button class="btn" onclick="location.href='{{ path('tracks') }}'">
                Regresar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <form action="{{ path('tracks_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
        </li>
    </ul>
    </p>
{% endblock %}
